<% include ../partials/header %>
	<div class="container">
		<div class="row">
			<h1  style="text-align: center;">Create a new Campground</h1>
			<div style="width: 35%; margin: 25px auto;">
				<form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Yosemite">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" placeholder="https://images.unsplash.com/..." required>
                   
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name="price" id="price" placeholder="9.99" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Californiaâ€™s Sierra Nevada mountains.">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
				<a href="/campgrounds" style="margin: 0 auto;">GO back</a>

			</div>
		</div>
	</div>
		
<% include ../partials/footer %>

