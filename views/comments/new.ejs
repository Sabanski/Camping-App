<% include ../partials/header  %>



<div class="container">
		<div class="row">
			<h1  style="text-align: center;">Add New Comment to <%=campground.name%> "Post"</h1>
			<div style="width: 35%; margin: 25px auto;">
				<form action="/campgrounds/<%=campground._id%>/comments" method="POST">
					<div class="form-group">
						<input class="form-control" type="textarea" placeholder="Text " name="comment[text]">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">Submit!</button>
					</div>
				</form>
				<a href="/campgrounds" style="margin: 0 auto;">GO back</a>

			</div>
		</div>
	</div>



